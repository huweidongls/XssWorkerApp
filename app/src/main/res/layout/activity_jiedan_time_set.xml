<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jingna.xssworkerapp.pages.JiedanTimeSetActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="69dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/back_blue"
                    android:layout_width="13dp"
                    android:layout_height="21dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:textColor="#3296FA"
                    android:textSize="17sp"
                    android:text="返回"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:text="接单时间设置"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:id="@+id/rl_save"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="#3296FA"
                android:textSize="17sp"
                android:text="保存"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:background="@color/white_ffffff"
        android:id="@+id/ll_time"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <RelativeLayout
            android:background="#C6E2FE"
            android:id="@+id/rl_zao"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_zao"
                    android:textColor="#3296FA"
                    android:textSize="17sp"
                    android:text="早"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_zao"
                    android:id="@+id/tv_start_time"
                    android:textColor="#3296FA"
                    android:textSize="17sp"
                    android:text="08:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wan"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_wan"
                    android:textColor="#3296FA"
                    android:textSize="17sp"
                    android:text="晚"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_wan"
                    android:id="@+id/tv_end_time"
                    android:textColor="#3296FA"
                    android:textSize="17sp"
                    android:text="17:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
    
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="188dp">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.jingna.xssworkerapp.widget.DatePickerView
                android:id="@+id/hour"
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <com.jingna.xssworkerapp.widget.DatePickerView
                android:id="@+id/minute"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
