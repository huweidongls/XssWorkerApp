<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_fragment_my_bg"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:src="#FAAF32"
                    android:layout_width="5dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="#5E6266"
                    android:textSize="17sp"
                    android:text="室内卫生"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#5E6266"
                    android:textSize="12sp"
                    android:text="十分钟前"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="28dp">

                <ImageView
                    android:src="@mipmap/rv_new1"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:textSize="16sp"
                    android:textColor="#191F25"
                    android:text="13:00 - 13:30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="48dp"
                    android:src="@mipmap/rv_new2"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:textSize="16sp"
                    android:textColor="#191F25"
                    android:text="10.50km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="28dp">

                <ImageView
                    android:src="@mipmap/rv_new3"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:textSize="16sp"
                    android:textColor="#191F25"
                    android:text="西典家园"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="#191F25"
                    android:text="（接单后可查看详细地址）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="21dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="28dp">

                <ImageView
                    android:src="@mipmap/rv_new4"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:text="199.90元+10抵扣卷"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/weikaishi"
            android:layout_width="36dp"
            android:layout_height="63dp" />

    </RelativeLayout>

</LinearLayout>
