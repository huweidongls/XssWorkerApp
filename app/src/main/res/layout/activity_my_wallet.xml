<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line"
    tools:context="com.jingna.xssworkerapp.pages.MyWalletActivity">

    <RelativeLayout
        style="@style/rl_top_bar">
        
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="69dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/back_blue"
                    android:layout_width="13dp"
                    android:layout_height="21dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:textColor="#3296FA"
                    android:textSize="17sp"
                    android:text="返回"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:text="我的钱包"
            style="@style/tv_top_title" />

    </RelativeLayout>
    
    <RelativeLayout
        android:background="#1484FF"
        android:layout_width="match_parent"
        android:layout_height="158dp">

        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:textColor="@color/white_ffffff"
            android:text="总金额(元)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_all_money"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/white_ffffff"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:background="#40000000"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_ke_money"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white_ffffff"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_ing_money"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white_ffffff"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:background="@color/white_ffffff"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="146dp">

        <RelativeLayout
            android:id="@+id/rl_bank_card"
            android:background="@drawable/selector_fragment_my_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:src="@mipmap/my_wallet1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="52dp"
                android:textSize="17sp"
                android:textColor="@color/black_333333"
                android:text="银行卡"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_gray"
                android:layout_width="9dp"
                android:layout_height="14dp" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="31dp"
                android:src="@mipmap/round_red"
                android:layout_width="8dp"
                android:layout_height="8dp" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="16dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/rl_tixian"
            android:background="@drawable/selector_fragment_my_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:src="@mipmap/my_wallet2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="52dp"
                android:textSize="17sp"
                android:textColor="@color/black_333333"
                android:text="提现"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_gray"
                android:layout_width="9dp"
                android:layout_height="14dp" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="16dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/rl_payment_details"
            android:background="@drawable/selector_fragment_my_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:src="@mipmap/my_wallet3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="52dp"
                android:textSize="17sp"
                android:textColor="@color/black_333333"
                android:text="收支明细"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_gray"
                android:layout_width="9dp"
                android:layout_height="14dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
