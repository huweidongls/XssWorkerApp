<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line"
    tools:context="com.jingna.xssworkerapp.pages.InsertBankCardActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="69dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/back_blue"
                    android:layout_width="13dp"
                    android:layout_height="21dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:textColor="#3296FA"
                    android:textSize="17sp"
                    android:text="返回"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:text="添加银行卡"
            style="@style/tv_top_title" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@color/white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:text="持卡人"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="text"
                android:id="@+id/et_name"
                android:layout_centerVertical="true"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:hint="请输入持卡人姓名"
                android:background="@null"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="85dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="16dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:text="卡号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_bank_code"
                android:inputType="number"
                android:layout_centerVertical="true"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:hint="请输入银行卡号"
                android:background="@null"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="85dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="16dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:text="开户行"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="text"
                android:id="@+id/et_bank_name"
                android:layout_centerVertical="true"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:hint="请输入银行卡开户行"
                android:background="@null"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="85dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="16dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:text="身份证"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_id_card"
                android:layout_centerVertical="true"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:hint="请输入持卡人身份证号"
                android:background="@null"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="85dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="16dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:text="手机号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_phone_num"
                android:inputType="phone"
                android:layout_centerVertical="true"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:hint="请输入银行预留手机号码"
                android:background="@null"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="85dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="16dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:text="验证码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_code"
                android:inputType="number"
                android:layout_centerVertical="true"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:hint="请输入短信验证码"
                android:background="@null"
                android:layout_marginRight="126dp"
                android:layout_marginLeft="85dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:background="@drawable/bg_929597_5dp_bord"
                android:id="@+id/tv_code"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="#929597"
                android:textSize="14sp"
                android:text="获取验证码"
                android:layout_width="100dp"
                android:layout_height="34dp" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        android:textColor="@color/white_ffffff"
        android:text="确认添加"
        android:textSize="17sp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_3296fa_3dp"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

</LinearLayout>
